{
  "buildCommand": "bun run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/hot-pay-webhook.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 15
    }
  }
}
